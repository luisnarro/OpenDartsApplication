<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luisnarro.opendartsapplication.MainActivity">


    <Button
        android:id="@+id/b_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ON" />

    <Button
        android:id="@+id/b_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_on"
        android:text="OFF" />

    <Button
        android:id="@+id/b_discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="DISCOVERABLE" />

    <Button
        android:id="@+id/b_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_discoverable"
        android:layout_alignStart="@+id/b_discoverable"
        android:layout_below="@+id/b_discoverable"
        android:text="LIST" />

    <ListView
        android:id="@+id/ls_devicelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_off" />

    <Button
        android:id="@+id/b_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_discoverable"
        android:layout_centerHorizontal="true"
        android:text="DISCOVER" />

</RelativeLayout>
